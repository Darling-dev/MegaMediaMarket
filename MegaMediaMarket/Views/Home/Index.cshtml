                      <div class="main__discord"> @Localizer["Telegram"] </div>
                    </div>
                  </a>
                  <p class="main__title">
                    <span class="main__title_color">@Localizer["TitleTextColored"]</span> @Localizer["TitleText"]
                  </p>
                  <p class="main__subtitle"> @Localizer["TitleDesc"] </p>
                  <h1>@Localizer["TitleKeys"]</h1>
                  <div class="d-block d-xl-flex" style="margin-top: 25px; max-width: calc(100% - 40px)">
                    <a class="main__link" href="/catalog">
                      <button class="main__button_catalog">@Localizer["Catalog"]</button>
                    </a>
				<form method="get" asp-action="Search" class="main__button_search searchBtn catalog_search">
					<img src="/tpl/static/media/search.svg">&nbsp;&nbsp; <input style="all: unset;"  id="searchTerm" oninput="searchOnPage()" type="text" placeholder="@Localizer["Search"]" name="SearchString" value="@ViewData["CurrentFilter"]" aria-label="Search" />
				  </form>
                  			<script>
				function searchOnPage() {
					var searchTerm = document.getElementById("searchTerm").value.toLowerCase();
					var elements = document.querySelectorAll('.searchable');

					for (var i = 0; i < elements.length; i++) {
						var content = elements[i].textContent.toLowerCase();
						if (content.includes(searchTerm)) {
							elements[i].style.display = "";
						} else {
							elements[i].style.display = "none";
						}
					}

					return false;
				}
			</script>
                  </div>
                  <div class="main__information">
                    <div class="main__information_wrapper">
                      <div class="main__information_width">
                        <div class="main__information_logo-games"></div>
                        <div class="main__information_wrap">
                          <p class="main__information_title">34+</p>
